// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Api",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"dockerComposeFile": ["./docker-compose.dev.yaml"],

	"service": "devcontainer",
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [8002, 80],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "pip3 install --user -r requirements.txt",

	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			"settings": {
				"git.enabled": true,
                "python.defaultInterpreterPath": "/workspace/api/.venv/bin/python"
            },
			"extensions": [
				"github.vscode-pull-request-github",
				"streetsidesoftware.code-spell-checker",
				"ms-toolsai.vscode-jupyter-cell-tags",
				"ms-toolsai.vscode-jupyter-slideshow",
				"xelad0m.jupyter-toc",
				"ms-toolsai.jupyter-hub",
				"ms-toolsai.vscode-jupyter-powertoys",
				"ms-toolsai.jupyter-renderers",
				"ms-toolsai.jupyter-keymap",
				"ms-toolsai.jupyter"
			]
		}
	},
	"features": {
		"ghcr.io/devcontainers/features/git:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/git-lfs:1": {
			"version": "latest"
		},
		"ghcr.io/prulloac/devcontainer-features/pre-commit:1": {
			"version": "latest"
		},
		// "ghcr.io/devcontainers-extra/features/cookiecutter:2": {
			// "version": "latest"
		// },
		"ghcr.io/jsburckhardt/devcontainer-features/uv:1": {
			"version": "latest"
		}




		
		
	},
	"workspaceFolder": "/workspace"
	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "curl -fsSL https://ollama.com/install.sh | sh",
	// "postStartCommand": "ollama serve",
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
